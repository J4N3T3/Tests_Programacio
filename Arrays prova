#include <stdio.h>
int a[2] = { 8,5 };
int b[2] = { 6,2 };

int main(a,b) {
	suma();
	resta();
	multiplicacio();
	divisio();
}

void suma() {
	int op[2] = {0,0};
	printf("Suma:\n");
	for (int i = 0;  i < 2; i++){
		op[i] = a[i] + b[i];
		printf("%d\n", op[i]);
	}
}
void resta() {
	int op[2] = { 0,0 };
	printf("Resta:\n");
	for (int i = 0; i < 2; i++) {
		op[i] = a[i] - b[i];
		printf("%d\n", op[i]);
	}
}
void multiplicacio() {
	int op[2] = { 0,0 };
	printf("Multiplicacio:\n");
	for (int i = 0; i < 2; i++) {
		op[i] = a[i] * b[i];
		printf("%d\n", op[i]);
	}
}
void divisio() {
	int op[2] = { 0,0 };
	printf("Divisio:\n");
	for (int i = 0; i < 2; i++) {
		op[i] = a[i] / b[i];
		printf("%d\n", op[i]);
	}
}
